while True:
    num = int(input("Digite um número para ver a sua tabuada: "))

    print("Tabuada do", num, ":")

    for i in range(1, 11):
        resultado = num * i
        print(num, "x", i, "=", resultado)

    opcao = input("Deseja ver a tabuada de outro número? (s/n): ")
    if opcao.lower() != 's':
        break
